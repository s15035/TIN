<%- include('../fragments/header.ejs') %>

    <main>
        <script type="application/javascript" src="js\validationCommon.js"></script>
        <script type="application/javascript" src="js\validationContactForm.js"></script>

        <form class="form-contact" novalidate onsubmit="return validateForm()">
            <label class="form-main-label">Formularz kontaktowy</label>
            <div>
                <label for="firstName">Imię:<abbr title="required" aria-label="required">*</abbr></label>
                <input type="text" name="firstName" id="firstName" />
                <span id="errorfirstName" class="errors-text"></span>

                <label for="lastName">Nazwisko:<abbr title="required" aria-label="required">*</abbr></label>
                <input type="text" name="lastName" id="lastName" />
                <span id="errorLastName" class="errors-text"></span>

                <label for="email">E-mail:<abbr title="required" aria-label="required">*</abbr></label>
                <input type="text" name="email" id="email" placeholder="np. nazwa@domena.pl" />
                <span id="errorEmail" class="errors-text"></span>

                <label for="message">Wiadomość:</label>
                <textarea class="form-message" name="message" id="message"></textarea>
                <span id="errorMessage" class="errors-text">wer</span>

                <p id="errorsSummary" class="errors-text"></p>
                <input class="form-button-submit" type="submit" value="Wyślij" />
            </div>
        </form>
    </main>

<%- include('../fragments/footer.ejs') %>